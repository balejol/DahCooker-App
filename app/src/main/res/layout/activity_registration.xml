<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/page_login_ek1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <View
            android:id="@+id/_bg__login_ek2"
            android:layout_width="500dp"
            android:layout_height="800dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/_bg__login_ek2_shape" />

        <View
            android:id="@+id/top"
            android:layout_width="500dp"
            android:layout_height="570dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-116dp"
            android:background="@drawable/top_shape" />

        <TextView
            android:id="@+id/__app_name_"
            android:layout_width="417dp"
            android:layout_height="89dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="79dp"
            android:gravity="center"
            android:text="Registration"
            android:textColor="@color/__app_name__color"
            android:textSize="30sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/login_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="216dp"
            android:gravity="center">

            <View
                android:id="@+id/login_box_ek2"
                android:layout_width="308dp"
                android:layout_height="501dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/login_box_ek2_shape" />


            <RelativeLayout
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="400dp">

                <View
                    android:id="@+id/_bg__sign_up_button_ek1"
                    android:layout_width="207dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="-80dp"
                    android:layout_marginTop="-475dp"
                    android:background="@drawable/_bg__sign_in_button_ek1_shape" />

                <Button
                    android:id="@+id/rectangle_27"
                    android:layout_width="207dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/rectangle_27_shape"
                    android:text="@string/sign_up_string" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="250dp">

                <EditText
                    android:id="@+id/write_password"
                    android:layout_width="206dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/write_password_shape"
                    android:inputType="textPassword" />

                <View
                    android:id="@+id/ellipse_4"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/ellipse_4_shape" />

                <TextView
                    android:id="@+id/password"
                    android:layout_width="135.3dp"
                    android:layout_height="19.3dp"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/password_ek2_string"
                    android:textColor="@color/forgot_password__color"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/idEdtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="170dp">

                <EditText
                    android:id="@+id/write_email"
                    android:layout_width="206dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/write_password_shape"
                    android:inputType="textPassword" />

                <View
                    android:id="@+id/ellipse_4"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/ellipse_4_shape" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="135.3dp"
                    android:layout_height="19.3dp"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="0dp"
                    android:text="E-mail"
                    android:textColor="@color/forgot_password__color"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/idEdtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="96dp">

                <EditText
                    android:id="@+id/write_username"
                    android:layout_width="206dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/write_username_shape" />

                <View
                    android:id="@+id/ellipse_2"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ellipse_2_shape" />

                <TextView
                    android:id="@+id/username_ek2"
                    android:layout_width="135.3dp"
                    android:layout_height="19.3dp"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/username_ek2_string"
                    android:textColor="@color/forgot_password__color"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/welcome_"
                android:layout_width="208dp"
                android:layout_height="55.5dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/welcome__string"
                android:textColor="@color/_bg__login_box_ek1_color"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp"
                android:text="Incorrect username or password!"
                android:textAlignment="center"
                android:textColor="#FF0000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="invisible" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>