<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.foodapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="DahCooker"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodApplication"
        tools:targetApi="31">
        <activity
            android:name=".EditRecipePage"
            android:exported="false" />
        <activity
            android:name=".RecipeInformationPage"
            android:exported="false" />
        <activity
            android:name=".App_Intro"
            android:exported="true" />
        <activity
            android:name=".FavoriteRecipesPage"
            android:exported="false" />

        <service android:name=".MusicService" />

        <activity
            android:name=".Register"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <!-- RegistrationActivity -->
        <activity
            android:name=".RegistrationActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <!-- IngredientsActivity -->
        <activity
            android:name=".IngredientsActivity"
            android:exported="true" />
        <!-- AddRecipeActivity -->
        <activity
            android:name=".AddRecipePage"
            android:exported="true" />
        <!-- RecipesPage -->
        <activity
            android:name=".RecipesPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- RecipeHistoryActivity -->
        <activity
            android:name=".RecipeHistoryActivity"
            android:exported="true" />
        <!-- SettingsActivity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="true" />
    </application>

</manifest>